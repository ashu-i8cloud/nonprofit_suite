<odoo>
  <template id="report_volunteer_certificate_document">
    <!-- ADD this wrapper so the report has a <main> element -->
    <t t-call="web.html_container">
      <!-- One page per shift -->
      <t t-foreach="docs" t-as="doc">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">Volunteer Service Certificate</h2>
            <p>
              This certifies that <b><t t-esc="doc.partner_id.name"/></b>
              volunteered for <b><t t-esc="doc.event_id.name"/></b>
              and contributed <b><t t-esc="doc.duration_hours"/></b> hours.
            </p>
            <p>Date: <t t-esc="(doc.check_out or doc.check_in).date()"/></p>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
