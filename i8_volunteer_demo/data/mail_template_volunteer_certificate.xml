<odoo>
  <data noupdate="1">
    <record id="mail_template_volunteer_certificate" model="mail.template">
      <field name="name">Volunteer Certificate</field>
      <field name="model_id" ref="model_volunteer_shift"/>
      <field name="subject">Your Volunteer Certificate: ${object.event_id.name}</field>
      <field name="email_from">${(user.email_formatted or '')}</field>
      <field name="email_to">${object.partner_id.email or ''}</field>
      <field name="body_html" type="html">
        <div>
          <p>Hi ${object.partner_id.name},</p>
          <p>Thanks for volunteering for <b>${object.event_id.name}</b>!</p>
          <p>Your certificate is attached. Total hours recorded:
            <b>${'%.2f' % (object.duration_hours or 0.0)}</b>.
          </p>
          <p>Regards,<br/>${object.company_id.name}</p>
        </div>
      </field>
    </record>
  </data>
</odoo>
