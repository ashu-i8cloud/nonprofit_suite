<odoo>
  <template id="portal_my_home_inherit_volunteer" inherit_id="portal.portal_my_home" name="Portal Home: Volunteer Link">
    <xpath expr="//div[contains(@class,'o_portal_docs')]" position="inside">
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">Volunteering</h5>
            <p class="card-text text-muted">Browse chapters and events, sign up, and track your time.</p>
            <a class="btn btn-primary mt-auto" href="/v/chapters">Open Volunteering</a>
          </div>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
