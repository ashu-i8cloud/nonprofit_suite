<odoo>
  <record id="view_event_broadcast_wizard" model="ir.ui.view">
    <field name="name">event.broadcast.wizard.form</field>
    <field name="model">event.broadcast.wizard</field>
    <field name="arch" type="xml">
      <form string="Broadcast to Volunteers">
        <group>
          <field name="event_id" readonly="1"/>
          <field name="message_body"/>
        </group>
        <footer>
          <button string="Send" name="action_broadcast" type="object" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_open_broadcast_wizard" model="ir.actions.act_window">
    <field name="name">Broadcast</field>
    <field name="res_model">event.broadcast.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_event_id': active_id}</field>
  </record>
</odoo>
