<odoo>
    <record id="view_volunteer_activity_list" model="ir.ui.view">
        <field name="name">volunteer.activity.list</field>
        <field name="model">volunteer.activity</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="event_id"/>
                <field name="start"/>
                <field name="end"/>
                <field name="capacity"/>
                <field name="allow_self_signup"/>
                <field name="volunteer_count" string="Signups"/>
            </list>
        </field>
    </record>

    <record id="view_volunteer_activity_form" model="ir.ui.view">
        <field name="name">volunteer.activity.form</field>
        <field name="model">volunteer.activity</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Open Signups" type="action"
                            name="%(i8_volunteer_demo.action_volunteer_shifts)d"
                            class="oe_highlight"
                            context="{'search_default_activity_id': id}"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="event_id"/>
                        <field name="company_id" readonly="1"/>
                        <field name="start"/>
                        <field name="end"/>
                        <field name="capacity"/>
                        <field name="allow_self_signup"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_volunteer_activities" model="ir.actions.act_window">
        <field name="name">Volunteer Activities</field>
        <field name="res_model">volunteer.activity</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
