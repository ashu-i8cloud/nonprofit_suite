<odoo>
  <record id="view_volunteer_shift_tree" model="ir.ui.view">
    <field name="name">volunteer.shift.tree</field>
    <field name="model">volunteer.shift</field>
    <field name="arch" type="xml">
      <list>
        <field name="partner_id"/>
        <field name="activity_id"/>
        <field name="event_id"/>
        <field name="state"/>
        <field name="check_in"/>
        <field name="check_out"/>
        <field name="duration_hours"/>
      </list>
    </field>
  </record>

  <record id="view_volunteer_shift_form" model="ir.ui.view">
    <field name="name">volunteer.shift.form</field>
    <field name="model">volunteer.shift</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_confirm" string="Confirm" type="object"
                  class="oe_highlight"
                  invisible="state not in ('pending','rejected')"/>
          <button name="action_reject" string="Reject" type="object"
                  invisible="state not in ('pending','confirmed','checkin')"/>
          <button name="action_preview_certificate" string="Preview Certificate" type="object"
                  invisible="state != 'checkout'"/>
          <button name="action_generate_certificate" string="Generate Certificate" type="object"
                  invisible="state != 'checkout'"/>
        </header>
        <sheet>
          <group>
            <field name="partner_id"/>
            <field name="activity_id"/>
            <field name="event_id" readonly="1"/>
            <field name="company_id" readonly="1"/>
          </group>
          <group>
            <field name="state" readonly="1"/>
            <field name="check_in" readonly="1"/>
            <field name="check_out" readonly="1"/>
            <field name="duration_hours" readonly="1"/>
            <field name="certificate_attachment_id" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_volunteer_shifts" model="ir.actions.act_window">
    <field name="name">Volunteer Shifts</field>
    <field name="res_model">volunteer.shift</field>
    <field name="view_mode">list,form,pivot,graph</field>
    <field name="context">{}</field>
  </record>

  <!-- Server actions for bulk confirm/reject -->
  <record id="server_action_confirm_shifts" model="ir.actions.server">
    <field name="name">Confirm Selected Shifts</field>
    <field name="model_id" ref="model_volunteer_shift"/>
    <field name="state">code</field>
    <field name="code">records.action_confirm()</field>
  </record>

  <record id="server_action_reject_shifts" model="ir.actions.server">
    <field name="name">Reject Selected Shifts</field>
    <field name="model_id" ref="model_volunteer_shift"/>
    <field name="state">code</field>
    <field name="code">records.action_reject()</field>
  </record>
</odoo>
