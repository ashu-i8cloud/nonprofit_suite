
<odoo>
  <record id="view_npo_fund_usage_tree" model="ir.ui.view">
    <field name="name">npo.fund.usage.tree</field>
    <field name="model">npo.fund.usage</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="date"/>
        <field name="purpose"/>
        <field name="event_id"/>
        <field name="amount"/>
      </list>
    </field>
  </record>

  <record id="view_npo_fund_usage_form" model="ir.ui.view">
    <field name="name">npo.fund.usage.form</field>
    <field name="model">npo.fund.usage</field>
    <field name="arch" type="xml">
      <form string="Fund Usage">
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="date"/>
            <field name="purpose"/>
            <field name="event_id"/>
            <field name="amount"/>
            <field name="notes"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_npo_fund_usage" model="ir.actions.act_window">
    <field name="name">Fund Usage</field>
    <field name="res_model">npo.fund.usage</field>
    <field name="view_mode">list,form,pivot,graph</field>
  </record>

  <menuitem id="menu_i8_donation_root" name="Donations" sequence="10"/>
  <menuitem id="menu_i8_donation" name="Donations" parent="menu_i8_donation_root" action="action_npo_donation" sequence="10"/>
  <menuitem id="menu_i8_fund_usage" name="Fund Usage" parent="menu_i8_donation_root" action="action_npo_fund_usage" sequence="20"/>
</odoo>
